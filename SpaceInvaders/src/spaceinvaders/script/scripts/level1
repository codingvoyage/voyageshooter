setvar yLoc -300
setvar index 0

for j = 0 and j < 2
    setvar xLoc 0

    for i = 0 and i < 40

        eval "sg" + index --> customName
        eval xLoc + 20 --> xLoc
        spawn "Space Guardian" customName xLoc yLoc
        eval index + 1 --> index

        wait 50
    next i + 1 --> i

    eval yLoc + 150 --> yLoc

next j + 1 --> j


endthread














spawn "Minion" "m1" 150 -300
spawn "Minion" "m2" 750 -300



var moveon false

while moveon != true
    wait 300

    isThereEntity "m1" --> aliveM1
    if aliveM1 == false

        isThereEntity "m2" --> aliveM2
        if aliveM2 == false
            setVar moveon true
        endif
    endif
wend

